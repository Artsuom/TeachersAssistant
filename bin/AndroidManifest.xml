<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teachersassistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launch_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.artsuo.teachersassistant.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.artsuo.teachersassistant.activities.EditActivity" 
            android:label="@string/edit_class_caption"/>
        <activity android:name="com.artsuo.teachersassistant.activities.CreateActivity" 
            android:label="@string/create_class_caption"/>
        <activity android:name="com.artsuo.teachersassistant.activities.OpenForEditActivity"
            android:label="@string/edit_class_caption"/>
        <activity android:name="com.artsuo.teachersassistant.activities.OpenForViewActivity"
            android:label="@string/view_class_caption"/>
        <activity android:name="com.artsuo.teachersassistant.activities.ViewActivity"
            android:label="@string/view_class_caption"/>
        
    </application>

</manifest>
